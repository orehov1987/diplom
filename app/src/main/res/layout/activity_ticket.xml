<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.whitejoker.testjson.LoginActivity">

    <Button
        android:id="@+id/btn_call_list_tickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_list_tickets"
        android:onClick="onClickButtons"/>


    <Button
        android:id="@+id/btn_change_owner_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_owner_ticket"
        android:onClick="onClickButtons"/>

    <Button
        android:id="@+id/btn_resolve_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickButtons"
        android:text="@string/resolve_ticket"
        android:visibility="visible" />

    <ListView
        android:id="@+id/TicketListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>